@{
    ViewData["Title"] = "Categorias Producto";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-9">
            <h1 class="fw-bold m-0">Categorias de Productos</h1>
        </div>
        <div class="col-3">
            <a 
                asp-action="Create"
                asp-controller="CategoriasProducto"
                asp-area="Admin"
                class="btn btn-dark">
                Crear Categoria
            </a>
        </div>
    </div>

    <br />
    <br />

    <table style="width: 100%;"
           id="tbl-categoriasProductos"
           class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/categoriasProducto.js"></script>
}