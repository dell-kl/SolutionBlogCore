@{
    ViewData["Title"] = "Listado Slider";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-9">
            <h2 class="text-primary">Listado de Slider</h2>
        </div>
        <div class="col-3 text-right">
            <a class="btn btn-primary"
               asp-action="Create"
               asp-controller="Sliders"
               asp-area="Admin">
                <i class="fa-solid fa-plus"></i>
                Crear Slider
            </a>
        </div>
    </div>

    <br/>
    <br/>

    <table style="width: 100%;"
           id="tbl-articulos"
           class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/slider.js"></script>
}