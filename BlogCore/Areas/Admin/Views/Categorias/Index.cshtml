@{
    ViewData["Title"] = "Lista Categoria";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-9">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-3 text-right">
            <a 
                class="btn btn-primary"
                asp-action="Create"
                asp-controller="Categorias"
                asp-area="Admin">
                <i class="fa-solid fa-plus"></i>
                Crear Categoria
            </a>
        </div>
    </div>
    
    <br/>
    <br/>
    <table 
        class="table table-striped table-bordered"
        style="width:100%;"
        id="tbl-categorias">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
}