@using BlogCore.Utilidades;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.bootswatch.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogCore.styles.css" asp-append-version="true" />

    @* Plugin css *@
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css"/>
    <link rel="stylesheet" href="~/lib/datatables/datatables.min.css"/>
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.6.1/tinymce.min.js" referrerpolicy="origin"></script>
    
    @await RenderSectionAsync("Estilos", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">

            <div class="container-fluid w-100">
                <a class="navbar-brand ms-5"
                   asp-area="Client"
                   asp-controller="Home"
                   asp-action="Index">
                    BlogCore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navegacionOpciones" aria-controls="navegacionOpciones" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navegacionOpciones">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Client" asp-controller="Home" asp-action="Index">
                                Inicio
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categorias Administrar</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item"
                                       asp-action="Index"
                                       asp-controller="Categorias"
                                       asp-area="Admin">Categorias</a>
                                    <a class="dropdown-item"
                                       asp-action="Index"
                                       asp-controller="Articulos"
                                       asp-area="Admin">Articulos</a>
                                    <a class="dropdown-item"
                                       asp-action="Index"
                                       asp-controller="Sliders"
                                       asp-area="Admin">Sliders</a>
                                    <a class="dropdown-item"
                                       asp-action="Index"
                                       asp-controller="Usuario"
                                       asp-area="Admin">Usuarios</a>
                                    <a class="dropdown-item"
                                       asp-action="Index"
                                       asp-controller="Producto"
                                       asp-area="Admin">
                                        Productos
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                    <form asp-area="Client" asp-action="Index" asp-controller="Home" class="d-flex">
                        
                        <select style="width:33%;"
                            class="form-select text-black border-1 rounded-start border border-light-subtle">
                            <option value="1">Articulos</option>
                            <option value="2">Productos</option>
                            <option value="3" selected>Todo</option>
                        </select>
                        <input class="form-control w-100 border-1 border border-light-subtle"
                               type="search"
                               name="busqueda"
                               placeholder="Buscar por palabra clave">
                        <button class="btn btn-warning my-2 border-1 border border-light-subtle my-sm-0 rounded-end text-black"
                                type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>
                    <div>
                        <partial name="_LoginPartial"/>
                    </div>
                    
                </div>
            </div>

        </nav>

        @if ( ViewBag.Inicio != null )
        {
            @await Html.PartialAsync("~/Views/Shared/VistasReutilizables/_CarruselSlider.cshtml")
        }

    </header>

    <div class="p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div style="height:10rem;"></div>
    <footer class="border-top text-muted footer mt-4" id="footer">
        <div class="container mt-4">
            <div class="row">
                <div class="col-10">
                    <h1 class="fw-bold text-white">BlogCore</h1>
                    <p class="text-white">Bienvenido a nuestra pagina de productos</p>
                </div>
                <div class="col-2">
                    <div class="row">
                        <div class="col-3 fs-1 text-white"><a><i class="fa-brands fa-facebook"></i></a></div>
                        <div class="col-3 fs-1 text-white"><a><i class="fa-brands fa-tiktok"></i></a></div>
                        <div class="col-3 fs-1 text-white"><a><i class="fa-brands fa-square-instagram"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.min.js" integrity="sha384-VQqxDN0EQCkWoxt/0vsQvZswzTHUVOImccYmSyhJTp7kGtPed0Qcx8rK9h9YEgx+" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* Seccion de todos nuestros plugins *@
    
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
